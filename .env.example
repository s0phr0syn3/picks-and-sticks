# Environment Configuration for Picks and Sticks

# TheSportsDB API Configuration
# Get your free API key from: https://www.thesportsdb.com/api.php
BASE_URL=https://www.thesportsdb.com/api/v2/json
API_KEY=your_api_key_here

# Database Configuration
# Options: 'development', 'production', 'test'
NODE_ENV=development

# Database file paths (relative to project root)
DB_PATH_PROD=./src/lib/server/production.db
DB_PATH_TEST=./src/lib/server/test.db
DB_PATH_DEV=./src/lib/server/development.db

# Season Configuration
# Current NFL season year
SEASON_YEAR=2025

# Application Configuration
# Port for the development server (optional, defaults to 5173)
PORT=5173

# Authentication Configuration (Auth.js)
# Generate a random secret for AUTH_SECRET in production
AUTH_SECRET=your-auth-secret-here-please-change-this-for-production
# Get GitHub OAuth app credentials from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Feature Flags (optional)
# Enable/disable specific features
ENABLE_AUTH=false
ENABLE_ADMIN=false